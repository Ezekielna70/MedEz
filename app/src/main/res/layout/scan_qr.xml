<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ScanQr">

    <RelativeLayout
        android:layout_marginTop="107dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pasien_scan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bluer"
            android:textSize="50dp"
            android:fontFamily="@font/capriola"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pasien_scan_text">

                <TextView
                    android:id="@+id/qr_terletak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kode QR terletak pada alat"
                    android:fontFamily="@font/capriola"
                    android:textSize="20dp"
                    android:textColor="@color/dark_blue"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="550dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:background="@drawable/dotted_border">

            <TextView
                android:id="@+id/hint_qr"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Tekan untuk Membuka Kamera"
                android:layout_above="@+id/qr_logo"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/capriola"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/qr_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:contentDescription="logo scan qr"
                android:src="@drawable/scanqr_logo"/>

            <TextView
                android:id="@+id/textResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"
                android:fontFamily="@font/capriola"
                android:textColor="@color/dark_blue"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>