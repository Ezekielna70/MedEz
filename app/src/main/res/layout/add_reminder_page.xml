<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tambah_obat"
                android:padding="5dp"
                android:background="@color/bluer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="Tambahkan Obat"
                android:textColor="@color/white"
                android:fontFamily="@font/capriola"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_below="@+id/title_tambah_obat">

            <EditText
                android:id="@+id/etReminderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="20sp"
                android:hint="Nama Obat"/>

            <EditText
                android:id="@+id/etReminderDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textSize="20sp"
                android:hint="Deskripsi Obat"/>

            <EditText
                android:id="@+id/etContainerA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="Dosis Obat" />

            <EditText
                android:id="@+id/etContainerB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:inputType="number"
                android:hint="Stok Obat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:text="Alarm 1"/>

            <Button
                android:id="@+id/btnSetTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/TimeSet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:text="Alarm 2"/>

            <Button
                android:id="@+id/btnSetTime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/TimeSet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:text="Alarm 3"/>

            <Button
                android:id="@+id/btnSetTime3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Waktu"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/TimeSet3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:visibility="gone"/>

<!--            <Switch-->
<!--                android:id="@+id/switchRepeat"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="48dp"-->
<!--                android:text="Ulangi Reminder?" />-->

<!--            <EditText-->
<!--                android:id="@+id/etInterval"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:inputType="number"-->
<!--                android:hint="Interval Pengulangan (dalam jam)"-->
<!--                android:visibility="gone" />-->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/btnSaveReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan Reminder"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bluer"/>

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_toRightOf="@+id/btnSaveReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batal"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/dark_red"/>

            </RelativeLayout>


        </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>