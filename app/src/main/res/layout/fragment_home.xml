<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="16dp"
        app:theme = "@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/dark_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/logo_medez"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/logo_medez_elips"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/logo_medez"
                    android:id="@+id/logo_medez_teks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MedEz"
                    android:textColor="@color/white"
                    android:fontFamily="@font/capriola"
                    android:textSize="20dp"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cek_profil_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="143dp">

        <FrameLayout
            android:layout_width="163dp"
            android:layout_height="186dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_home_page"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="68dp"
                android:background="@drawable/cek_profil_teks"/>

            <ImageView
                android:id="@+id/logo_cek_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/cek_profil_icon"/>

        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/list_obat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="219dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="143dp">

        <FrameLayout
            android:layout_width="163dp"
            android:layout_height="186dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_kanan_atas_home"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_obat_logo"
                android:layout_marginTop="64dp"
                android:layout_marginLeft="93dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_obat_teks"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="25dp"/>

        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/status_alat_button"
        android:layout_width="165dp"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="219dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="364dp">

        <FrameLayout
            android:layout_width="163dp"
            android:layout_height="186dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_kanan_bawah_home"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="52dp"
                android:background="@drawable/check_mark_logo"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alat_teks"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="60dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tersambung_teks"
                android:layout_marginTop="115dp"
                android:layout_marginLeft="20dp"/>
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/scan_qr_button"
        android:layout_width="163dp"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="364dp">

        <FrameLayout
            android:layout_width="163dp"
            android:layout_height="186dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/box_kiri_bawah_home"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/qr_scanner_page"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="SCAN\nQR"
                android:textAlignment="center"
                android:fontFamily="@font/capriola"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/bluer"/>
        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="597dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/box_homepage"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_telfon"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="27dp"
            android:text="Kesulitan?"
            android:textStyle="bold"
            android:fontFamily="@font/capriola"
            android:textSize="32sp"
            android:textColor="@color/dark_red"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tombolKesulitan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="151dp"
            android:text="Hubungi Pendamping"
            android:textSize="10sp"
            android:fontFamily="@font/capriola"
            android:textStyle="bold"
            android:textColor="@color/dark_red"
            app:cornerRadius="15dp"/>


    </FrameLayout>

</FrameLayout>