<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di MedEZ!"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:fontFamily="@font/capriola"
        android:textColor="@color/bluer"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <ImageButton
        android:clickable="true"
        android:id="@+id/cek_profil_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="test"
        android:layout_alignParentTop="true"
        android:layout_marginTop="143dp"
        android:textColor="@color/white"
        android:background="@drawable/profil_button"/>

    <ImageButton
        android:clickable="true"
        android:layout_below="@+id/cek_profil_button"
        android:id="@+id/scanqr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="test"
        android:textColor="@color/white"
        android:background="@drawable/scanqr_button"/>

    <ImageButton
        android:clickable="true"
        android:id="@+id/obat_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="143dp"
        android:textColor="@color/white"
        android:text="test"
        android:background="@drawable/obat_button"/>

    <RelativeLayout
        android:id="@+id/status_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="338dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/status_alat">

        <TextView
            android:id="@+id/teks_status_alat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/capriola"
            android:textColor="@color/dark_blue"
            android:textSize="26sp"
            android:textStyle="bold"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="353dp"
        android:layout_height="134dp"
        android:layout_below="@+id/scanqr_button"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/kabari_pendamping">

        <ImageView
            android:id="@+id/ic_telpon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_telfon"/>

        <Button
            android:id="@+id/btnHubungi"
            android:layout_toRightOf="@+id/ic_telpon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/white"
            android:textColor="@color/dark_red"
            android:fontFamily="@font/capriola"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="Hubungi Pendamping"/>


    </RelativeLayout>




</RelativeLayout>